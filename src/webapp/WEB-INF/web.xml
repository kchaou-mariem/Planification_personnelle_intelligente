<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Planification Personnelle Intelligente</display-name>
    <description>API REST pour la planification personnelle</description>
    
    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>controller.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Utilisateur Controller -->
    <servlet>
        <servlet-name>UtilisateurController</servlet-name>
        <servlet-class>controller.UtilisateurController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtilisateurController</servlet-name>
        <url-pattern>/api/utilisateurs/*</url-pattern>
    </servlet-mapping>
    
    <!-- Activite Controller -->
    <servlet>
        <servlet-name>ActiviteController</servlet-name>
        <servlet-class>controller.ActiviteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActiviteController</servlet-name>
        <url-pattern>/api/activites/*</url-pattern>
    </servlet-mapping>
    
    <!-- Contrainte Controller -->
    <servlet>
        <servlet-name>ContrainteController</servlet-name>
        <servlet-class>controller.ContrainteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContrainteController</servlet-name>
        <url-pattern>/api/contraintes/*</url-pattern>
    </servlet-mapping>
    
    <!-- Conflit Controller -->
    <servlet>
        <servlet-name>ConflitController</servlet-name>
        <servlet-class>controller.ConflitController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConflitController</servlet-name>
        <url-pattern>/api/conflits/*</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
